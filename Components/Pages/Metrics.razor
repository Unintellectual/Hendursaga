@page "/metrics"

<h3>Jellyfin Metrics</h3>

@if (Metrics == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Active Users</th>
                <th>Streaming Sessions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var metric in Metrics)
            {
                <tr>
                    <td>@metric.Timestamp</td>
                    <td>@metric.ActiveUsers</td>
                    <td>@metric.StreamingSessions</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Metric> Metrics;

    protected override async Task OnInitializedAsync()
    {
        Metrics = await Http.GetFromJsonAsync<List<Metric>>("api/jellyfin/metrics");
    }

    public class Metric
    {
        public DateTime Timestamp { get; set; }
        public int ActiveUsers { get; set; }
        public int StreamingSessions { get; set; }
    }
}
